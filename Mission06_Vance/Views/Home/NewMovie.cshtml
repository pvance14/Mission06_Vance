@model Movie

<h1>Add a New Movie to the Collection</h1>
<br />

<p>What movie have you brought to Joel today?</p>
<br />

<form method="post">
    <div class="form-group" style="display: flex; align-items: center;">
        <p style="margin-right: 10px;">Film Category:</p>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br>
    </div>

    <div class="form-group">
        <label asp-for="Title">Title:</label><br>
        <input asp-for="Title" class="form-control"><br>
    </div>

    <div class="form-group">
        <label asp-for="Year">Year:</label><br>
        <input asp-for="Year" type="number" class="form-control"><br>
    </div>

    <div class="form-group">
        <label asp-for="Director">Director:</label><br>
        <input asp-for="Director" class="form-control"><br>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating:</label><br>
        <select asp-for="Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br>
    </div>

    <div class="form-group">
        <label asp-for="Edited">Edited: (check box if yes)</label><br>
        <input asp-for="Edited" type="checkbox"><br>
    </div>

    <div class="form-group">
        <label asp-for="CopiedToPlex">Copied to Plex:</label><br>
        <input asp-for="CopiedToPlex" type="checkbox"><br>
    </div>

    <div class="form-group">
        <label asp-for="LentTo">Lent To:</label><br>
        <input asp-for="LentTo" class="form-control"><br>
    </div>

    <div class="form-group">
        <label asp-for="Notes">Notes:</label><br>
        <input asp-for="Notes" class="form-control" maxlength="25"><br>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

    <div asp-validation-summary="All"></div>
</form>