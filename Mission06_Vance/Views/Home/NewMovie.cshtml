@model Movie

<h1>Add a New Movie to the Collection</h1>
<br />

<p>What movie have you brought to Joel today?</p>
<br />

<form method="post">
    <div class="form-group">
        <label asp-for="MovieCategory">Category:</label><br>
        <input asp-for="MovieCategory" class="form-control" required><br>
    </div>

    <div class="form-group">
        <label asp-for="MovieTitle">Title:</label><br>
        <input asp-for="MovieTitle" class="form-control" required><br>
    </div>

    <div class="form-group">
        <label asp-for="MovieYear">Year:</label><br>
        <input asp-for="MovieYear" type="number" class="form-control" required><br>
    </div>

    <div class="form-group">
        <label asp-for="MovieDirector">Director:</label><br>
        <input asp-for="MovieDirector" class="form-control" required><br>
    </div>

    <div class="form-group">
        <label asp-for="MovieRating">Rating:</label><br>
        <select asp-for="MovieRating" class="form-control" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br>
    </div>

    <div class="form-group">
        <label asp-for="MovieEdited">Edited: (check box if yes)</label><br>
        <input asp-for="MovieEdited" type="checkbox"><br>
    </div>

    <div class="form-group">
        <label asp-for="MovieLentTo">Lent To:</label><br>
        <input asp-for="MovieLentTo" class="form-control"><br>
    </div>

    <div class="form-group">
        <label asp-for="MovieNotes">Notes:</label><br>
        <input asp-for="MovieNotes" class="form-control" maxlength="25"><br>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>