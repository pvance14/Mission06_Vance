@{
}

@model List<Movie>

<table class="table table-bordered">
    <thead class="fw-bold">
        <td>CategoryID</td>
        <td>Title</td>
        <td>Year</td>
        <td>Director</td>
        <td>Rating</td>
        <td>Edited</td>
        <td>Copied To Plex</td>
        <td>Lent To</td>
        <td>Notes</td>
    </thead>

    @foreach (var x in Model)
    {
        <tbody>
            <tr>
                <td>@x.CategoryID</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.CopiedToPlex</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>

                <td> <a class="btn btn-info">Edit</a></td>
                <td> <a class="btn btn-danger">Delete</a></td>
            </tr>
        </tbody>
    }

</table>